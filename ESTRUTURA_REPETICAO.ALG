Algoritmo "Estrutura_repeticao"
Var
   x, soma: inteiro


Inicio
      escreva("informe o primeiro número: ")
      leia(x)
      
      soma<- 0
      
      enquanto x <> 0 faca
      soma <- soma + x
      escreva("informe outro número: ")
      leia(x)
      fimenquanto
      
      escreva("Soma = ", soma)


Fimalgoritmo